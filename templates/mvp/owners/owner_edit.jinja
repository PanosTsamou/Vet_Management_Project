{% extends "base-form.jinja" %}
{% block content %}
    <form class="new-display-form" action="/owners/{{owner.id}}" method="post">
        <label for="first_name">First Name</label>
        <input type="text" name="first_name" id="first_name" value="{{owner.first_name}}">
        <label for="last_name">Last Name</label>
        <input type="text" name="last_name" id="last_name" value="{{owner.last_name}}">
        <label for="dob">DOB</label>
        <input type="text" name="dob" id="dob" value="{{owner.dob}}">
        <label for="address">Address</label>
        <input type="text" name="address" id="address" value="{{owner.address}}">
        <label for="phone_number">Phone Number</label>
        <input type="text" name="phone_number" id="phone_number" value="{{owner.phone_number}}">
        <label for="email">Email</label>
        <input type="text" name="email" id="email" value="{{owner.email}}">
        <input type="submit" value="Submit">
    </form>
{% endblock content %} 