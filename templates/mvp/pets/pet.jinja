{% extends "base.jinja" %}
{% block aside %}
    <aside>
        <a href="/pets/new-pet"><h2>Add a New Pet</h2></a>
    </aside>
{% endblock aside %}

{% block content %}
    <div class="single-pet">
        <section class="pet-plus-img">
            <div class="pet-info">
                <h2>{{pet.name}}</h2>
                <h4>DOB: {{pet.dob}}</h4>
                <h4>Species: {{pet.species}}</h4>
                <h4>Breed: {{pet.breed}}</h4>
                <h4>Sex: {{pet.sex}}</h4>
                {% if pet.chipped  %}
                <h4>Chip Number: {{pet.chip_number}}</h4>
                {% else %}
                <h4> Not Chipped </h4>
                {% endif %}
                <h4>Weight: {{pet.weight}}</h4>
                <h4>Pet's Veterian: <a href="/vets/{{veterian.id}}">{{veterian.full_name()}}</a></h4>
                <div class="delete-edit">
                    <form action="/pets/{{pet.id}}/delete" method="post">
                        <button class="delete-button" ><i class="fa fa-trash-o fa-3x" style="color:red;"> </i></button>
                        {# <input type="submit" value="Delete"/> #}
                    </form>
                    <form action="/pets/{{pet.id}}/edit" method="post">
                            <button class="edit"><i class="fa fa-pencil-square-o fa-3x" style="color:rgb(112, 167, 29)"></i></button>
                        {# <input type="submit" value="Edit"/> #}
                    </form>
                </div>
            </div>
            <img src="{{ url_for('static', filename='no_img.png') }}" width="150" height="200">
        </section>
        <section class="owner-plus-img">
            <div>
                <a href="/owners/{{pet.owner.id}}"><h2>{{pet.owner.full_name()}}</h2></a>
                <h4>DOB: {{pet.owner.dob}}</h4>
                <h4>Address: {{pet.owner.address}}</h4>
                <h4>Phone: {{pet.owner.phone_number}}</h4>
                <h4>Email: {{pet.owner.email}}</h4>
            </div>
            <img src="{{ url_for('static', filename='no_img.png') }}"  width="150" height="200">
        </section>
        <div class="treatment">
            <h2>Treatment</h2>
            <p>{{pet.treatment}}</p>
        </div>
    </div>
{% endblock content %}